@model WebApp.Models.OrderWeb

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>OrderWeb</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
               @Html.LabelFor(model => Model.tempLocation)
                @Html.DropDownListFor(Model => Model.tempLocation, new SelectList(Model.LocationEnumerable, "Value", "Text"), new { required = (string)null })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            <div class="form-group">
                <a asp-area="" asp-controller="Order" asp-action="Create" class="btn btn-default">Checkout</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
