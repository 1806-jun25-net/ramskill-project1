@model WebApp.Models.OrderWeb

@{
    ViewData["Title"] = "StartOrder";
}

<h2>StartOrder</h2>

<h4>OrderWeb</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StartOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.LabelFor(model => Model.LocationId)
                @Html.DropDownListFor(Model => Model.LocationId, new SelectList(Model.LocationEnumerable, "Value", "Text"), new { required = (string)null })
            </div>
            <div class="form-group">
                <label asp-for="PizzaCount" class="control-label"></label>
                <input asp-for="PizzaCount" class="form-control" />
                <span asp-validation-for="PizzaCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Pizzas" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
